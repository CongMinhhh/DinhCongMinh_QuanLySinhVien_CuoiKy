@model IEnumerable<DinhCongMinh_QuanLySinhVien_CuoiKy.Models.LopSinhHoat>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-weight: bold; text-align: center">QUẢN LÝ LỚP SINH HOẠT</h2>

<p>
    @using (Html.BeginForm("Create", "LopSinhHoat", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary">Thêm Mới</button>
    }
</p>
<div class="form-inline mb-3">
    @using (Html.BeginForm("Index", "LopSinhHoat", FormMethod.Get))
    {
        <div class="form-group">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã lớp sinh hoạt" })
            @Html.TextBox("searchName", ViewBag.CurrentNameFilter as string, new { @class = "form-control", placeholder = "Tìm theo tên lớp sinh hoạt" })
            @Html.TextBox("searchMaLSH", ViewBag.CurrentMaLSHFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã giáo viên" })
            @Html.TextBox("searchMaKhoa", ViewBag.CurrentMaKhoaFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã khoa" })
            <button type="submit" class="btn btn-primary">Tìm</button>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLSH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenLSH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaGV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKhoa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLSH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLSH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaGV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoa)
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "LopSinhHoat", new { id = item.MaLSH })'">Sửa</button>
                <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "LopSinhHoat", new { id = item.MaLSH })'">Xem chi tiết</button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "LopSinhHoat", new { id = item.MaLSH })'">Xoá</button>
            </td>
        </tr>
    }

</table>
