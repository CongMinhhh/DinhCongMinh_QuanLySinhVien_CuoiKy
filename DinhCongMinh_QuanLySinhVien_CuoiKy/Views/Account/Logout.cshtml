@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logout</title>
    <!-- Thêm các tệp CSS cần thiết tại đây -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .logout-container {
            margin-top: 10%;
            text-align: center;
        }

            .logout-container h2 {
                margin-bottom: 30px;
            }

        .btn-logout {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            background-color: #dc3545;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            .btn-logout:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="logout-container">
                    <h2>Bạn có muốn đăng xuất?</h2>
                    <form action="@Url.Action("Logout", "Account")" method="post">
                        <button type="submit" class="btn btn-logout">Đăng xuất</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

