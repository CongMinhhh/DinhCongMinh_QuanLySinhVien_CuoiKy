                        @Html.LabelFor(model => model.TenLHP, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenLHP, new { htmlAttributes = new { @class = "form-control" } })
