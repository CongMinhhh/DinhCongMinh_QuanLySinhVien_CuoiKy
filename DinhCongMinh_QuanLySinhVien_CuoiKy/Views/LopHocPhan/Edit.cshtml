                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        <p>
            @using (Html.BeginForm("Index", "LopHocPhan", FormMethod.Get))
            {
                <button type="submit" class="btn btn-primary" style="margin-left: 30%;">Trở về danh sách lớp học phần</button>
            }
        </p>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
