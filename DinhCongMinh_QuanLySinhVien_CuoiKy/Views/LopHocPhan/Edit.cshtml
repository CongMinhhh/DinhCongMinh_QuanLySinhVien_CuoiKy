@model DinhCongMinh_QuanLySinhVien_CuoiKy.Models.LopHocPhan

@{
    ViewBag.Title = "Edit";
}

<h2 style="font-weight: bold; text-align: center">CHỈNH SỬA THÔNG TIN LỚP HỌC PHẦN</h2>

<div class="container">
    <div class="row justify-content-center ">
        <div class="col-md-8 col-md-offset-3">
