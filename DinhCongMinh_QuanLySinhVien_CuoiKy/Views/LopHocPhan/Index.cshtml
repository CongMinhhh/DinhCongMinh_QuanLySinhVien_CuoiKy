@model IEnumerable<DinhCongMinh_QuanLySinhVien_CuoiKy.Models.LopHocPhan>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-weight: bold; text-align: center">QUẢN LÝ LỚP HỌC PHẦN</h2>

<p>
    @using (Html.BeginForm("Create", "LopHocPhan", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary">Thêm Mới</button>
    }
</p>
<div class="form-inline mb-3">
    @using (Html.BeginForm("Index", "LopHocPhan", FormMethod.Get))
    {
        <div class="form-group">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã lớp học phần" })
            @Html.TextBox("searchName", ViewBag.CurrentNameFilter as string, new { @class = "form-control", placeholder = "Tìm theo tên lớp học phần" })
            @Html.TextBox("searchMaLSH", ViewBag.CurrentMaLSHFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã giáo viên" })
            <button type="submit" class="btn btn-primary">Tìm</button>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenLHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaGV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaLHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaGV)
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "LopHocPhan", new { id = item.MaLHP })'">Sửa</button>
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "LopHocPhan", new { id = item.MaLHP })'">Xem chi tiết</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "LopHocPhan", new { id = item.MaLHP })'">Xoá</button>
        </td>
    </tr>
}

</table>
