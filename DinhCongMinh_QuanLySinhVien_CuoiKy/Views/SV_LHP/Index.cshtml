@model IEnumerable<DinhCongMinh_QuanLySinhVien_CuoiKy.Models.SV_LHP>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-weight: bold; text-align: center">QUẢN LÝ SINH VIÊN - LỚP HỌC PHẦN</h2>
<p>
    @using (Html.BeginForm("Create", "SV_LHP", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary">Thêm Mới</button>
    }
</p>
<div class="form-inline mb-3">
    @using (Html.BeginForm("Index", "SV_LHP", FormMethod.Get))
    {
        <div class="form-group">
            <!-- Đặt giá trị value cho các input từ ViewBag hoặc Model -->
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã lớp học phần" })
            @Html.TextBox("searchName", ViewBag.CurrentNameFilter as string, new { @class = "form-control", placeholder = "Tìm theo mã sinh viên" })

            <!-- Thêm hai trường input để nhập điểm thấp nhất và điểm cao nhất và đặt giá trị value -->
            <input type="number" name="minScore" class="form-control" placeholder="Điểm thấp nhất" value="@ViewBag.CurrentMinScore" />
            <input type="number" name="maxScore" class="form-control" placeholder="Điểm cao nhất" value="@ViewBag.CurrentMaxScore" />

            <button type="submit" class="btn btn-primary">Tìm</button>
        </div>
    }
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaSV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiemHocPhan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLHP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaSV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiemHocPhan)
    </td>
    <td>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "SV_LHP", new { id1 = item.MaLHP, id2 = item.MaSV })'">Sửa</button>
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "SV_LHP", new { id1 = item.MaLHP, id2 = item.MaSV })'">Xem chi tiết</button>
        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "SV_LHP", new { id1 = item.MaLHP, id2 = item.MaSV })'">Xoá</button>
    </td>
</tr>
    }

</table>
